<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:actionBarSize">70dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <!-- Mios -->
    <style name="titlebar_menu">
        <item name="android:windowTitleBackgroundStyle">@android:color/white</item>
    </style>
    <style name="titlebar_title">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">50sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="titlebar_button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="title_image">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">#00A9A2</item>
    </style>
    <style name="button">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="regular_text">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="edit_text">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@drawable/button_image</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
