<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:actionBarSize">45dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#068C87</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>
    <!-- Mios -->
    <style name="titlebar_menu">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="titlebar_title">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">50sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="titlebar_button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="input_text">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="button_style">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="text_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">start|bottom</item>
        <item name="android:gravity">start|bottom</item>
    </style>
    <style name="aux_text_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>